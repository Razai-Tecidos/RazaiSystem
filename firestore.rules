rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regras para coleÃ§Ã£o de tecidos
    match /tecidos/{tecidoId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para coleÃ§Ã£o de cores
    match /cores/{corId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para coleÃ§Ã£o de vÃ­nculos cor-tecido
    match /cor_tecido/{vinculoId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para coleÃ§Ã£o de estampas
    match /estampas/{estampaId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para coleÃ§Ã£o de tamanhos
    match /tamanhos/{tamanhoId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para controle de SKU de tecidos
    match /sku_control/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para controle de SKU de cores
    match /sku_control_cor/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para lojas Shopee conectadas
    // Escrita apenas via Admin SDK (backend) â€” tokens sÃ£o sensÃ­veis
    match /shopee_shops/{shopId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Regras para dados de vendas por SKU
    match /shopee_sku_sales/{salesId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para produtos/anÃºncios Shopee
    match /shopee_products/{productId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para preferÃªncias do usuÃ¡rio Shopee
    match /shopee_user_preferences/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para templates de anÃºncios Shopee
    match /shopee_product_templates/{templateId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para cache de categorias Shopee (apenas leitura pelo frontend)
    match /shopee_categories_cache/{cacheId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Regras para cache de logÃ­stica Shopee (apenas leitura pelo frontend)
    match /shopee_logistics_cache/{cacheId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Regras para logs de webhook Shopee (apenas backend)
    match /shopee_webhook_logs/{logId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Regras para eventos de pedidos Shopee (apenas backend)
    match /shopee_order_events/{eventId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Regras para cores desabilitadas (estoque Shopee)
    match /disabled_colors/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Regras para exemplos de treinamento ML
    match /ml_training_examples/{exampleId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para metadados do modelo ML
    match /ml_model_metadata/{modelId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para configuraÃ§Ãµes globais do sistema
    match /system_config/{configId} {
      allow read, write: if request.auth != null;
    }
    
    // Regras para catÃ¡logos compartilhÃ¡veis
    match /catalogos/{catalogoId} {
      // Leitura pÃºblica (para links compartilhÃ¡veis)
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Regras para mosaicos da gestao de imagens
    match /gestao_imagens_mosaicos/{mosaicoId} {
      allow read, write: if request.auth != null;
    }

    // Negar acesso a todas as outras colecoes por padrao
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

